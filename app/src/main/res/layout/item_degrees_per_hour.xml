<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/item_shimmer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="8dp"
    android:gravity="center"
    android:minHeight="124dp"
    android:minWidth="64dp"
    android:background="@drawable/shape_weather_per_hour"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_item_weather_status"
        android:layout_width="36dp"
        android:layout_marginTop="16dp"
        android:layout_height="36dp"/>

    <TextView
        android:id="@+id/tv_item_time"
        android:theme="@style/TextWrapperStyle"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_temperature"
        android:theme="@style/TextWrapperStyle"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>