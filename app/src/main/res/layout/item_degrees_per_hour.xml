<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:minHeight="124dp"
    android:minWidth="42dp"
    android:background="@drawable/shape_weather_per_hour"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/iv_item_weather_status"
        android:background="@drawable/ic_cloudy_sun"
        android:layout_width="36dp"
        android:layout_marginTop="16dp"
        android:layout_height="36dp"/>

    <TextView
        android:id="@+id/tv_item_time"
        android:theme="@style/TextWrapperStyle"
        android:text="@string/bottom_time"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_temperature"
        android:theme="@style/TextWrapperStyle"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:text="@string/temperature_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>